<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/default_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="#FFF"

            android:src="@mipmap/propic" />

        <TextView
            android:id="@+id/enrootuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/default_pic"
            android:layout_toRightOf="@+id/default_pic"
            android:paddingRight="5dp"
            android:text="Priyanka"

            android:maxWidth="300dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/fullimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/default_pic"
            android:src="@drawable/image1" />



        <TextView
            android:id="@+id/timeago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/enrootuser"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="20m"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp" />












        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3 Comments"
            android:id="@+id/noofshares"
            android:layout_below="@+id/fullimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#9F9FAB"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/fullimage"
            android:layout_toLeftOf="@+id/noofshares"
            android:layout_toStartOf="@+id/noofshares"
            android:src="@drawable/chat"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10 Likes"
            android:id="@+id/likes"
            android:layout_below="@+id/fullimage"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"

            android:textColor="#9F9FAB"/>

        <ToggleButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/likebutton"
            android:textOn=""
            android:textOff=""
            android:layout_below="@+id/fullimage"
            android:layout_toLeftOf="@+id/likes"
            android:layout_toStartOf="@+id/likes"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/check" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:textColor="#FFFFFF"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_margin="10dp"
            android:textSize="18sp"

            android:layout_alignBottom="@+id/fullimage"
            android:layout_alignParentStart="true" />

        <TextView
            android:text=""

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FFFFFF"


            android:id="@+id/filtername"
            android:layout_above="@+id/description"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp" />


    </RelativeLayout>


</RelativeLayout>