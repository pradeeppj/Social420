<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="20dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_pic"
            android:layout_width="match_parent"
            android:layout_height="220dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-30dp"

            android:src="@drawable/group_pic" />

        <TextView
            android:text="Casual Smokers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_pic"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:layout_marginTop="-25dp"

            android:textColor="#9F9FAB"
            android:id="@+id/groupname" />

        <TextView
            android:text="124 Members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupname"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:maxWidth="170dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="5dp"

            android:textColor="#C8C7D0"
            android:id="@+id/noofmembers" />

        <TextView
            android:text="Join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noofmembers"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:maxWidth="170dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:textColor="#FB0058"
            android:id="@+id/join" />


    </RelativeLayout>

</android.support.v7.widget.CardView>