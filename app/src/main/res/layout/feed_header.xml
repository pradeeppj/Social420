<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/enrootuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="Blue Dream"
            android:textColor="#9F9FAB"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:singleLine="true"

            android:layout_toRightOf="@+id/default_pic"
            android:layout_toEndOf="@+id/default_pic" />

        <ImageButton
            android:id="@+id/default_pic"
            android:layout_width="125dp"
            android:layout_gravity="left|top"
            android:background="@drawable/rectangle"


            android:src="@drawable/deal"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="125dp" />


        <ImageView
            android:layout_width="125dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/rectangle"
            android:layout_alignBottom="@+id/default_pic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView2"
            android:background="#80000000"/>

        <TextView
            android:text="1 OZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/default_pic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"

            android:maxWidth="50dp"
            android:ellipsize="end"
            android:singleLine="true"

            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_marginBottom="10dp"
            android:id="@+id/quantity" />

        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/quantity"
            android:layout_toEndOf="@+id/quantity"
            android:layout_alignBottom="@+id/default_pic"
            android:maxWidth="50dp"
            android:ellipsize="end"
            android:singleLine="true"


            android:layout_marginLeft="5dp"

            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_marginBottom="10dp"
            android:id="@+id/iphen" />


        <TextView
            android:text="$99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iphen"
            android:layout_toEndOf="@+id/iphen"
            android:layout_alignBottom="@+id/default_pic"
            android:maxWidth="50dp"
            android:ellipsize="end"
            android:singleLine="true"


            android:layout_marginLeft="5dp"

            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_marginBottom="10dp"
            android:id="@+id/price" />

        <TextView
            android:id="@+id/storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Terapentine Care Station"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"


            android:layout_marginTop="15dp"
            android:layout_below="@+id/enrootuser"
            android:layout_toRightOf="@+id/default_pic"
            android:layout_toEndOf="@+id/default_pic" />

        <TextView
            android:id="@+id/thc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="THC : 26%"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"

            android:layout_marginTop="20dp"
            android:layout_below="@+id/storename"
            android:layout_toRightOf="@+id/default_pic" />

        <TextView
            android:id="@+id/cbd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="CBD : 16%"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"

            android:layout_marginTop="20dp"
            android:layout_below="@+id/storename"
            android:layout_toRightOf="@+id/thc"
            android:layout_toEndOf="@+id/thc" />

        <TextView
            android:id="@+id/cbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="CBN : 34%"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"

            android:layout_marginTop="20dp"
            android:layout_below="@+id/storename"
            android:layout_toRightOf="@+id/cbd"
            android:layout_toEndOf="@+id/cbd" />

        <TextView
            android:id="@+id/claims"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="120 Claims"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp"


            android:layout_alignBottom="@+id/default_pic"
            android:layout_toRightOf="@+id/default_pic"
            android:layout_toEndOf="@+id/default_pic" />

        <TextView
            android:id="@+id/get_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Get Deal"
            android:textColor="#1AC1A7"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp"
            android:layout_alignBottom="@+id/claims"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />

        <TextView
            android:id="@+id/dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80m"
            android:textColor="#9F9FAB"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp"
            android:layout_above="@+id/storename"
            android:layout_alignRight="@+id/get_deal"
            android:layout_alignEnd="@+id/get_deal"
            android:layout_alignBottom="@+id/enrootuser"/>




    </RelativeLayout>


</RelativeLayout>